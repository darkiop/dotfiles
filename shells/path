# define and load directorys for personal $PATH

pathadd() {
  if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
    export PATH="${PATH:+"$PATH:"}$1"
  fi
}

pathadd "/usr/local/bin"
pathadd "/usr/bin"
pathadd "/bin"
pathadd "$HOME/bin"
pathadd "$HOME/dotfiles/bin"
pathadd "$HOME/dotfiles/modules/fzf/bin"
pathadd "$HOME/.local/bin"
pathadd "$HOME/.cargo/bin" 