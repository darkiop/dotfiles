# run ioBroker fix.sh Skript
alias iofix='curl -sL https://iobroker.net/fix.sh | bash -'

# ioBroker log -f
case $HOSTNAME in
  (iobroker-master) alias iobl='lnav /opt/iobroker/log/iobroker.current.log';;
  (odin) alias iobl='docker exec -it iobroker-master sh -c "lnav /opt/iobroker/log/iobroker.current.log"';;
  (pve-vm-docker) alias iobl='docker exec -it iobroker-master sh -c "lnav /opt/iobroker/log/iobroker.current.log"';;
esac
